<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="23dp"
    android:orientation="vertical"
    tools:context=".LoguinUsuario">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Registrarse"
            android:textColor="@android:color/background_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="79dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="115dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:text="Usuario"
                    android:textColor="@android:color/background_dark"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="170dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="114dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="17dp"
                    android:gravity="center"
                    android:text="Contraseña"
                    android:textColor="@android:color/background_dark"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="225dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="115dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Nombre"
                    android:textColor="@android:color/background_dark"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="280dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="114dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Apellido"
                    android:textColor="@android:color/background_dark"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="339dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="115dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Telefono"
                    android:textColor="@android:color/background_dark"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="403dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="112dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="Correo"
                    android:textColor="@android:color/background_dark"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_editor_absoluteY="454dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="112dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="Dirección"
                    android:textColor="@android:color/background_dark"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_editor_absoluteY="519dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/textUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="150dp"
                    tools:layout_editor_absoluteY="157dp" />

                <EditText
                    android:id="@+id/textContraseña"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    tools:layout_editor_absoluteX="150dp"
                    tools:layout_editor_absoluteY="211dp" />

                <EditText
                    android:id="@+id/textNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="150dp"
                    tools:layout_editor_absoluteY="268dp" />

                <EditText
                    android:id="@+id/textApellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/textTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="phone"
                    tools:layout_editor_absoluteX="148dp"
                    tools:layout_editor_absoluteY="385dp" />


                <EditText
                    android:id="@+id/textCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    tools:layout_editor_absoluteX="150dp"
                    tools:layout_editor_absoluteY="443dp" />

                <EditText
                    android:id="@+id/textDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="148dp"
                    tools:layout_editor_absoluteY="502dp" />
            </LinearLayout>
        </LinearLayout>-----
    </LinearLayout>

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Registrase"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="621dp" />

</LinearLayout>